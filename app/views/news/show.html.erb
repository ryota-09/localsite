<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        コンテンツ
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= image_tag @news.avatar %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @news.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>ニュース</th>
                </tr>
                <tr>
                  <td><%= simple_format @news.body %></td>
                </tr>
              </table>
              <% if @news.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_news_path(@news), class: "button is-warning" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-warning">
          <p class="panel-heading">
            By <%= @news.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @news.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@news.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @news.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>


